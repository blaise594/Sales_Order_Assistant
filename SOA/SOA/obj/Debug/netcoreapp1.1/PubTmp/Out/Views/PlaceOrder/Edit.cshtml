@model SOA.Models.Order

@{
    ViewData["Title"] = "Edit";
}

<h2>Additional Information</h2>
<h4>Please fill out all information below.</h4>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Order</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Status" />
        <input type="hidden" asp-for="Qty" />
        <input type="hidden" asp-for="TargetPrice" />
        <input type="hidden" asp-for="MfgPn" />
        <input type="hidden" asp-for="Mfg" />
        <input type="hidden" asp-for="InternalPn" />
        <input type="hidden" asp-for="Description" />       
        <input type="hidden" asp-for="Price" />       
        <input type="hidden" asp-for="PlaceOrderDate" />      
        <div class="form-group">
            <label asp-for="PurchaseTerms" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PurchaseTerms" class="form-control" />
                <span asp-validation-for="PurchaseTerms" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DateNeeded" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DateNeeded" class="form-control" />
                <span asp-validation-for="DateNeeded" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ShipCourier" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ShipCourier" class="form-control" />
                <span asp-validation-for="ShipCourier" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ShipMethod" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ShipMethod" class="form-control" />
                <span asp-validation-for="ShipMethod" class="text-danger"></span>
            </div>
        </div>      
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Place Order" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>



